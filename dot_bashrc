# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific environment
if ! [[ "$PATH" =~ "$HOME/.local/bin:$HOME/bin:" ]]; then
	PATH="$HOME/.local/bin:$HOME/bin:$PATH"
fi
export PATH

if [[ $- != *i* ]]; then
	# shell is non-interactive. be done now!
	echo "not interactive"
	return
fi

rc_src=~/shrc/rc.d/

if [ -d $HOME/.shrc/rc.d ]; then
	for file in $HOME/.shrc/rc.d/*.sh; do
		source $file
	done
fi

if [ -d $HOME/.shrc/bashrc.d ]; then
	for file in $HOME/.shrc/bashrc.d/*.bash; do
		source $file
	done
fi

eval "$(sheldon source)"

blesh_src=$HOME/.local/share/blesh/ble.sh

if [ -f "$blesh_src" ]; then
	source "$blesh_src"
fi
